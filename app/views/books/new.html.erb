<div class="container">
  <div class="book-form">
    <h2>Adicione um Livro:</h2>
      <%= simple_form_for [@book] do |f| %>
        <%= f.input :title %>
        <%= f.input :year %>
        <%= f.input :description %>
        <%= f.input :pages %>
        <%= f.input :author %>
        <%= f.input :photo %>
        <%= f.submit "Submit", class: "btn" %>
      <% end %>
    </div>
</div>
